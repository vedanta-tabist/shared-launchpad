{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": false,
    "jsx": "react-jsx", // ✅ React 17+ JSX transform
    "importHelpers": true,
    "module": "ESNext", // ✅ Let bundler decide final module format
    "target": "ES2017", // ✅ Modern enough for most environments
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,

    // ✅ Ensures default export works for CJS and ESM consumers
    "allowUmdGlobalAccess": true,

    // ✅ Helps tree-shaking when used with rollup/webpack
    "preserveSymlinks": true
  },
  "include": ["src"],
  "exclude": ["dist", "dist/types", "node_modules"],
  "typeRoots": ["./src/types", "./node_modules/@types"]
}
