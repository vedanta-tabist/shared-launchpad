# Never auto-install peer dependencies
auto-install-peers=false

# Make sure hoisted dependencies from consumers are used instead of local copies
public-hoist-pattern[]=react
public-hoist-pattern[]=react-dom
public-hoist-pattern[]=antd

# Don't copy peer deps into your node_modules when building the library
dependenciesMeta.react.injected=true
dependenciesMeta.react-dom.injected=true
dependenciesMeta.antd.injected=true
